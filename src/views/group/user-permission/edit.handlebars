<div class="container-fluid">
    {{#if message}}
    <div class="alert alert-success" role="alert">
        {{message}}
    </div>
    {{/if}}
    {{#each extractedErrors}}
    <h5 style="color:red">{{this.name}}</h5>
    {{/each}}
    {{#if messageErr}}
    <div class="alert alert-warning" role="alert">
        {{messageErr}}
    </div>
    {{/if}}
    <form action="/group/user-permission/update/{{listUserPermissions.id}}" method="POST">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Account</th>
                    <th scope="col">Phòng</th>
                    <th scope="col">Quyền</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <label> {{listUserPermissions.Admin.email}} </label> <br>
                    </td>
                    <td>
                        {{#each listsDepartments}}
                        <input type="radio" id="id{{this.id}}" name="department" value="{{this.id}}" {{#xIf this.id
                            ../listUserPermissions.departmentId}} checked {{/xIf}}>
                        <label for="id{{this.id}}"> {{this.name}} </label> <br>
                        {{/each}}
                    </td>
                    <td>
                        {{#each listsPermissions}}
                        <input type="checkbox" class="permission" id="id_permission{{this.id}}" name="permissions[]"
                            value="{{this.id}}" {{#each ../listUserPermissions}} {{#xIf ../this.id this.permissionId}}
                            checked {{/xIf}} 
                            
                        {{/each}}>
                        <label for="id_permission{{this.id}}"> {{this.name}} </label> <br>
                        {{/each}}
                    </td>
                </tr>
            </tbody>
        </table>
         <input type="text" value="{{listUserPermissions.userId}}" name="userIds">
        <button type="submit" class="btn btn-primary" class="btn">Submit</button>
    </form>
</div>


